@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using CreativeIndustries.Resources
@using CreativeIndustries.DS.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject LocService SharedLocalizer


@if (User.Identity.IsAuthenticated)
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a class="nav-link text-light" asp-controller="Users" asp-action="Index" title="Manage">Hello @User.Identity.Name</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@SharedLocalizer.GetLocalizedHtmlString("logout")</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav nav-pills navbar-right">
        <li class="nav-item">
            <a class="nav-link  text-light" class="btn btn-dark" asp-controller="Account" asp-action="Register">@SharedLocalizer.GetLocalizedHtmlString("register")</a>
        </li>
        <li class="nav-item">
            <a class="nav-link  text-light" class="btn btn-dark" asp-controller="Account" asp-action="Login">@SharedLocalizer.GetLocalizedHtmlString("login")</a>
        </li>
    </ul>
}
