@using CreativeIndustries.Resources
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CreativeIndustries.API.DXS.AccountViewModels.RegistrationViewModel
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("register");
}
<h2>@ViewData["Title"]</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("firstName")</label>
        <div class="col-md-10">
            <input asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("lastName")</label>
        <div class="col-md-10">
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="form-group">
    <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("email")</label>
        <div class="col-md-10">
            <input asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        </div>
    <div class="form-group">
    <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("password")</label>
    <div class="col-md-10">
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("confirmPassword")</label>
    <div class="col-md-10">
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    </div>
    <div>
        <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("register") />
    </div>
</form>
