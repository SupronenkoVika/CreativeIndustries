@using CreativeIndustries.Resources
@model string

@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("newRole");
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">@SharedLocalizer.GetLocalizedHtmlString("newRole")</label>
        <input name="name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("add")</button>
</form>
