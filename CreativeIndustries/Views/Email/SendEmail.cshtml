@using CreativeIndustries.Resources
@model CreativeIndustries.API.DXS.MailDataViewModel

@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("email");
}

<h4 class="text-success mt-4">@SharedLocalizer.GetLocalizedHtmlString("email")</h4>
<hr class="text-success" />
<div class="d-flex justify-content-center">
    <div class="alert alert-info alert-dismissible fade show text-secondary indexText col-6" role="alert">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="SendMail" method="post">
            <div class="form-group">
                <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("recipientEmail")</label>
                <div class="col-12 mb-3">
                    <input asp-for="To" class="form-control"/>
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("subject")</label>
                <div class="col-12 mb-3">
                    <input asp-for="Subject" class="form-control"/>
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("writeMessage")</label>
                <div class="col-12 mb-3">
                    <textarea asp-for="Body" class="form-control" id="editor"  rows="3"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </div>
        <form asp-action = "SendEmail" method = "post">
            <div class="col-4">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer.GetLocalizedHtmlString("sendEmail")</button>
            </div>
            </form>
        </form>
        <form asp-action="SendEmailToAllUsers" method="post">
            <div class="col-4">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer.GetLocalizedHtmlString("sendToAll")</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/ckeditor5/35.3.2/classic/ckeditor.js"></script>
    <partial src="_ValidationScriptsPartial.cshtml"></partial>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>

}
