@using CreativeIndustries.Resources
@using CreativeIndustries.DS.Entities
@model IEnumerable<CreativeIndustries.DS.Entities.Company>
@inject LocService SharedLocalizer

@{
    ViewBag.Title = "Users list";
}

<a asp-action="CreateCompany">Add Company</a>

<table class="table">
    <tr><th>Email</th><th>Год</th><th></th></tr>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.CompanyName</td>
            <td>
                <form asp-action="DeleteCompany" asp-route-id="@company.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
