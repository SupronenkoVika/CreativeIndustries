@using CreativeIndustries.Resources
@using CreativeIndustries.DS.Entities
@model IEnumerable<CreativeIndustries.DS.Entities.Company>
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("companies");
}

<table class="table">
    <tr><th>@SharedLocalizer.GetLocalizedHtmlString("companyName")</th><th>@SharedLocalizer.GetLocalizedHtmlString("description")</th><th></th></tr>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.CompanyName</td>
            <td>@company.Description</td>
            <td>
                <a asp-action="EditCompany" asp-route-id="@company.Id">@SharedLocalizer.GetLocalizedHtmlString("edit")</a>
            </td>
            <td>
                <form asp-action="DeleteCompany" asp-route-id="@company.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-light">
                        @SharedLocalizer.GetLocalizedHtmlString("delete")
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
