@using CreativeIndustries.Resources
@model CreativeIndustries.API.DXS.AccountViewModels.ChangePasswordViewModel
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("changePassword");
}


<h2>@SharedLocalizer.GetLocalizedHtmlString("changePassword") @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("oldPassword")</label>
    <div class="col-md-10">
        <label asp-for="OldPassword" class="control-label">Old password</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    </div>
    <div class="form-group">
    <label class="col-md-2 control-label">@SharedLocalizer.GetLocalizedHtmlString("newPassword")</label>
    <div class="col-md-10">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    </div>
    <div class="form-group">
        <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("save") class="btn btn-outline-dark" />
    </div>
</form>