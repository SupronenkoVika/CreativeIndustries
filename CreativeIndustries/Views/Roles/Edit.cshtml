@using Microsoft.AspNetCore.Identity
@using CreativeIndustries.Resources
@model CreativeIndustries.API.DXS.ChangeRoleViewModel
@inject LocService SharedLocalizer

<h2>@SharedLocalizer.GetLocalizedHtmlString("changeRole") @Model.UserEmail</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

            @role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("save")</button>
</form>
