@using Microsoft.AspNetCore.Mvc.TagHelpers
@using CreativeIndustries.Resources
@model IEnumerable<CreativeIndustries.DS.Entities.User>
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("users");
}

<a class="btn btn-sm btn-light" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("addUser")</a>


<table class="table">
    <tr><th>@SharedLocalizer.GetLocalizedHtmlString("email")</th><th>@SharedLocalizer.GetLocalizedHtmlString("personName")</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <th>
                    <a class="btn btn-sm btn-light" asp-action="Edit" asp-route-id="@user.Id" method="post">@SharedLocalizer.GetLocalizedHtmlString("edit")</a>
                </th>
                <th>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-light">
                            @SharedLocalizer.GetLocalizedHtmlString("delete")
                        </button>
                    </form>
                </th>
            </td>
            </tr>
    }
</table>
